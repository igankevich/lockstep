Name:           @name@
Version:        @version@
Release:        @release@%{?dist}
Summary:        Record resources consumed by userlann processes

License:        @license@
URL:            https://igankevich.github.io/@name@/ 
Source0:        @name@-%{version}.tar.xz
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-root-%(%{__id_u} -n)

BuildRequires:  gcc
BuildRequires:  meson

%description
Record resources consumed by userlann processes

%global debug_package %{nil}

%prep
%autosetup

%build
%meson -Db_lto=true
%meson_build

%install
%{meson_install}
%{__mkdir_p} %{buildroot}%{_sysconfdir}/sysconfig
%{__mkdir_p} %{buildroot}%{_unitdir}
%{__mkdir_p} %{buildroot}%{_sysconfdir}/logrotate.d
%{__mkdir_p} %{buildroot}%{_var}/log/lockstep
%{__install} -m644 %{_vpath_builddir}/pkg/lockstep.sysconfig %{buildroot}%{_sysconfdir}/sysconfig
%{__install} -m644 %{_vpath_builddir}/pkg/lockstep.service %{buildroot}%{_unitdir}
%{__install} -m644 %{_vpath_builddir}/pkg/lockstep.logrotate %{buildroot}%{_sysconfdir}/logrotate.d

%check
%meson_test

%files
%defattr(0755,root,root,0755)
%{_bindir}/lockstep
%{_var}/log/lockstep
%defattr(0644,root,root,0755)
%config(noreplace) %{_sysconfdir}/sysconfig/lockstep
%config(noreplace) %{_sysconfdir}/logrotate.d/lockstep
%{_unitdir}/lockstep.service

%changelog

* Sat Nov 24 2018 Ivan Gankevich <i.gankevich@spbu.ru> 0.1.9-1
Logrotate and systemd configuration.
* Fri Nov 23 2018 Ivan Gankevich <i.gankevich@spbu.ru> 0.1.0-1
Packaged everything.
